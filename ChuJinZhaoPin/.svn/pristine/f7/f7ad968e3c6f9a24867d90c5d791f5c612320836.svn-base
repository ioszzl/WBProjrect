#import "MineResumeTableViewCell.h"

@implementation MineResumeTableViewCell
-(instancetype)initWithStyle:(UITableViewCellStyle)style reuseIdentifier:(NSString *)reuseIdentifier{
    self = [super initWithStyle:style reuseIdentifier:reuseIdentifier];
    if (self) {
        self.selectionStyle = UITableViewCellSelectionStyleNone;
        [self initUI];
    }
    return self;
}
-(void)initUI{
    self.backgroundColor = RGBCOLOR(230, 230, 230);
    
    UIView *bgV = [UIView new];
    bgV.backgroundColor = RGBCOLOR(255, 255, 255);
    bgV.layer.shadowColor = COLOR_RGB_51.CGColor;
    bgV.layer.shadowOpacity = 0.2f;
    bgV.layer.shadowOffset = CGSizeMake(0, 0.5);
    bgV.layer.cornerRadius = 4;
    [self.contentView addSubview:bgV];
    [bgV mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(15));
        make.top.mas_offset(Size(84/2));
        make.right.mas_offset(-Size(15));
        make.bottom.mas_offset(-Size(5));
    }];
    
    _headImgV = [[UIImageView alloc]initWithImage:[UIImage imageNamed:@"个人中心头像"]];
    _headImgV.layer.cornerRadius = Size(110/4);
    _headImgV.clipsToBounds = YES;
    //_headImgV.contentMode = UIViewContentModeScaleAspectFit;
    [bgV addSubview:_headImgV];
    [_headImgV mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.mas_offset(-Size(55/2));
        make.centerX.equalTo(bgV);
        make.width.height.mas_equalTo(Size(110/2));
    }];
    
    _nameLab = [UILabel ym_labelWithFrame:CGRectZero font:[UIFont boldSystemFontOfSize:Size(15)] textColor:COLOR_RGB_51];
    [bgV addSubview:_nameLab];
    [_nameLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(_headImgV.mas_bottom).mas_offset(Size(15));
        make.centerX.equalTo(_headImgV);
    }];
    
    
    _introLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_102];
    _introLab.textAlignment = NSTextAlignmentCenter;
    _introLab.numberOfLines = 2;
    [bgV addSubview:_introLab];
    [_introLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(16));
        make.top.equalTo(_nameLab.mas_bottom).mas_offset(Size(15));
        make.right.mas_offset(-Size(16));
    }];
    
    
    UIView *line = [UIView new];
    line.backgroundColor = COLOR_RGB_line;
    [bgV addSubview:line];
    [line mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.right.mas_equalTo(0);
        make.height.mas_equalTo(0.5);
        make.bottom.mas_offset(-Size(44));
    }];
    
    UILabel *moneyItemLab = [UILabel ym_labelWithFrame:CGRectZero font:[UIFont systemFontOfSize:Size(13)] textColor:COLOR_RGB_153 textAlignment:NSTextAlignmentCenter];
    [bgV addSubview:moneyItemLab];
    moneyItemLab.text = @"期望薪资";
    
    UILabel *ageItemLab = [UILabel ym_labelWithFrame:CGRectZero font:[UIFont systemFontOfSize:Size(13)] textColor:COLOR_RGB_153 textAlignment:NSTextAlignmentCenter];
    ageItemLab.text = @"年龄";
    [bgV addSubview:ageItemLab];
    
    UILabel *yearItemLab = [UILabel ym_labelWithFrame:CGRectZero font:[UIFont systemFontOfSize:Size(13)] textColor:COLOR_RGB_153 textAlignment:NSTextAlignmentCenter];
    yearItemLab.text = @"工作经验";
    [bgV addSubview:yearItemLab];
    
    [@[moneyItemLab,ageItemLab,yearItemLab] mas_distributeViewsAlongAxis:MASAxisTypeHorizontal withFixedSpacing:0 leadSpacing:0 tailSpacing:0];
    [@[moneyItemLab,ageItemLab,yearItemLab] mas_makeConstraints:^(MASConstraintMaker *make) {
        make.bottom.equalTo(line.mas_top).mas_offset(-Size(48/2));
    }];
    
    _moneyLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51];
    [bgV addSubview:_moneyLab];
    [_moneyLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.bottom.equalTo(moneyItemLab.mas_top).mas_offset(-Size(9));
        make.centerX.equalTo(moneyItemLab);
    }];
    
    
    _ageLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51];
    [bgV addSubview:_ageLab];
    [_ageLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.bottom.equalTo(ageItemLab.mas_top).mas_offset(-Size(9));
        make.centerX.equalTo(ageItemLab);
    }];
    
    
    _yearLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51];
    [bgV addSubview:_yearLab];
    [_yearLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.bottom.equalTo(yearItemLab.mas_top).mas_offset(-Size(9));
        make.centerX.equalTo(yearItemLab);
    }];
    
    
    _defaultBtn = [UIButton ym_ButtonWithFrame:CGRectZero title:@"设为默认" backgroundColor:nil titleColor:COLOR_RGB_153 titleSize:Size(13)];
    _defaultBtn.layer.cornerRadius = Size(5);
    _defaultBtn.clipsToBounds = YES;
    _defaultBtn.layer.borderColor = COLOR_RGB_line.CGColor;
    _defaultBtn.layer.borderWidth = 0.5;
    [_defaultBtn setTitle:@"默认简历" forState:UIControlStateSelected];
    [_defaultBtn setTitleColor:COLOR_RGB_51 forState:UIControlStateSelected];
    [_defaultBtn setBackgroundImage:[UIImage ym_imageWithColor:COLOR_MAIN_PERSON size:CGSizeMake(Size(134/2), Size(44/2))] forState:UIControlStateSelected];
    [bgV addSubview:_defaultBtn];
    [_defaultBtn mas_makeConstraints:^(MASConstraintMaker *make) {
        make.width.mas_equalTo(Size(134/2));
        make.height.mas_equalTo(Size(44/2));
        make.left.mas_offset(Size(15));
        make.top.equalTo(line.mas_bottom).mas_offset(Size(11));
    }];
    [_defaultBtn addTarget:self action:@selector(doDefaultBtn:) forControlEvents:UIControlEventTouchUpInside];
    
    
    UIButton *deleteBtn = [UIButton buttonWithType:UIButtonTypeCustom];
    [deleteBtn setImage:[UIImage imageNamed:@"我的简历-删除"] forState:UIControlStateNormal];
    [bgV addSubview:deleteBtn];
    [deleteBtn mas_makeConstraints:^(MASConstraintMaker *make) {
        make.right.mas_offset(-Size(17));
        make.top.equalTo(line.mas_bottom).mas_offset(Size(11));
        
    }];
    [deleteBtn addTarget:self action:@selector(doDeleteBtn) forControlEvents:UIControlEventTouchUpInside];
    
    _dateLab = [UILabel ym_labelWithFrame:CGRectZero font:[UIFont systemFontOfSize:Size(13)] textColor:COLOR_RGB_153];
    [bgV addSubview:_dateLab];
    [_dateLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.right.equalTo(deleteBtn.mas_left).mas_offset(-Size(7));
        make.centerY.equalTo(_defaultBtn);
    }];
    
    
    
//    _nameLab.text = @"哈哈哈哈";
//    _introLab.text = @"asdasdassdasdasdasdsa";
//    _moneyLab.text = @"8K-10K";
//    _ageLab.text = @"23";
//    _yearLab.text = @"应届生";
//    _dateLab.text = @"2018-7-26 14:10更新";
    
}

-(void)setList:(MineResumeList *)list{
    _list = list;
    
    [_headImgV sd_setImageWithURL:[NSURL URLWithString:list.imgUrl] placeholderImage:[UIImage imageNamed:@"头像"]];
    _nameLab.text = list.real_name;//@"哈哈哈哈";
    _introLab.text = list.self_evaluate;//@"asdasdassdasdasdasdsa";
    _moneyLab.text = list.want_salary;//@"8K-10K";
    _ageLab.text = NSStringFromInteger(list.age);//@"23";
    
    _yearLab.text = [list.fresh_graduates isEqualToString:@"1"] ? @"应届生" : [NSString stringWithFormat:@"%ld年",list.work_year];
    _dateLab.text = [NSString stringWithFormat:@"%@更新",[[NSDate dateWithTimeIntervalSince1970:list.date/1000] stringWithFormat:@"yyyy-MM-dd HH:mm"]];//@"2018-7-26 14:10更新";
    if (list.def_resume_id == list.ID){
        self.defaultBtn.selected = YES;
    }else{
        self.defaultBtn.selected = NO;
    }
    
}

-(void)doDeleteBtn{
    BLOCK_EXEC(self.deleteBlock);
}
-(void)doDefaultBtn:(UIButton *)btn{
    BLOCK_EXEC(self.defaultResumeBlock,btn);
}





- (void)awakeFromNib {
    [super awakeFromNib];
    // Initialization code
}

- (void)setSelected:(BOOL)selected animated:(BOOL)animated {
    [super setSelected:selected animated:animated];

    // Configure the view for the selected state
}

@end
