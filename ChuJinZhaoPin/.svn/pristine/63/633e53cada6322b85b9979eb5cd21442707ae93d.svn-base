#import "ChatHistoryListViewController.h"
#import "ChatIndexListTableViewCell.h"
@interface ChatHistoryListViewController ()<UITableViewDelegate,UITableViewDataSource>
@property (nonatomic, strong) UITableView *tableV;
@property (nonatomic, strong) UITextField *searchTF;
@end

@implementation ChatHistoryListViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    [self initUI];
}
-(void)initUI{
    
    self.title = @"历史聊天记录";
    
    UIView *topView = [UIView new];
    [self.view addSubview:topView];
    [topView mas_updateConstraints:^(MASConstraintMaker *make) {
        make.left.top.right.mas_offset(0);
        make.height.mas_equalTo(Size(68/2+16));
    }];
    
    _searchTF = [UITextField new];
    _searchTF.backgroundColor = RGBCOLOR(255, 255, 255);
    _searchTF.layer.borderColor = COLOR_RGB_line.CGColor;
    _searchTF.layer.borderWidth = 0.5;
    _searchTF.layer.cornerRadius = Size(5);
    _searchTF.font = FONT_SIZE_15;
    _searchTF.leftViewMode = UITextFieldViewModeAlways;
    _searchTF.rightViewMode = UITextFieldViewModeAlways;
    [topView addSubview:_searchTF];
    [_searchTF mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(10));
        make.top.mas_offset(Size(8));
        make.bottom.mas_offset(-Size(8));
        make.right.mas_offset(-Size(10));
    }];
    
    UIView *imgVV = [[UIView alloc]initWithFrame:CGRectMake(0, 0, Size(13+16), Size(68/2))];
    UIImageView *imgV = [[UIImageView alloc]initWithImage:[UIImage imageNamed:@"首页搜索"]];
    imgV.frame = CGRectMake(Size(8), 0, Size(13), Size(68/2));
    imgV.contentMode = UIViewContentModeScaleAspectFit;
    [imgVV addSubview:imgV];
    _searchTF.leftView = imgVV;
    
    UIButton *searchBtn = [UIButton ym_ButtonWithFrame:CGRectMake(0, 0, Size(84/2), Size(68/2)) title:@"搜索" backgroundColor:nil titleColor:COLOR_RGB_153 titleSize:Size(15)];
    _searchTF.rightView = searchBtn;
    
    
   
    _tableV = [[UITableView alloc]initWithFrame:CGRectZero style:UITableViewStylePlain];
    _tableV.tableFooterView = [UIView new];
    _tableV.separatorInset = UIEdgeInsetsMake(0, Size(15), 0, Size(15));
    _tableV.showsVerticalScrollIndicator = NO;
    _tableV.showsHorizontalScrollIndicator = NO;
    _tableV.backgroundColor = COLOR_BG;
    _tableV.dataSource = self;
    _tableV.delegate = self;
    [self.view addSubview:_tableV];
    [_tableV mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.right.bottom.mas_offset(0);
        make.top.equalTo(topView.mas_bottom);
    }];

}

#pragma mark - tableview delegate
-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section{
   
    return 10;
}
-(UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath{
    CELL_DEFINE(ChatIndexListTableViewCell);
   
    return cell;
}

