-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section{
    return self.dataSource.count;
}
-(UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath{
    ECMessage *msg = self.dataSource[indexPath.row];
    if ([msg.from isEqualToString:AppDelegateInstance.userModel.userId]) {
        CELL_DEFINE(ChatMineTableViewCell);
        
        cell.contentLab.text = [(ECTextMessageBody *)msg.messageBody text];
        
        [cell.headImgV sd_setImageWithURL:[NSURL URLWithString:self.topModel.data.selfHeadPicUrl] placeholderImage:[UIImage imageNamed:@"头像"]];
        cell.dateLab.text = [[NSDate dateWithTimeIntervalSince1970:msg.timestamp.integerValue/1000] stringWithFormat:@"MM月dd日 HH:mm"];
        return cell;
    }else{
        CELL_DEFINE(ChatOtherTableViewCell);
        
        cell.contentLab.text = [(ECTextMessageBody *)msg.messageBody text];
        
        [cell.headImgV sd_setImageWithURL:[NSURL URLWithString:self.topModel.data.otherUserHeadPicUrl] placeholderImage:[UIImage imageNamed:@"头像"]];
        cell.dateLab.text = [[NSDate dateWithTimeIntervalSince1970:msg.timestamp.integerValue/1000] stringWithFormat:@"MM月dd日 HH:mm"];
        return cell;
    }
    
}
