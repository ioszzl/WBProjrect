#import "AddContactViewController.h"
#import "MineInfoTableViewCell.h"
@interface AddContactViewController ()<UITableViewDelegate,UITableViewDataSource,UITextFieldDelegate>
@property (nonatomic, strong) UITableView *tableV;

@property (nonatomic, strong) UITextField *nameTF;
@property (nonatomic, strong) UITextField *phoneTF;
@end

@implementation AddContactViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    [self initUI];
    
    if (!self.list) {
        self.list = [ContactList new];
    }else{
        self.nameTF.text = self.list.userName;
        self.phoneTF.text = self.list.phone;
    }
}
-(void)initUI{
    self.title = @"联系人";
    
    UIBarButtonItem *item = [[UIBarButtonItem alloc]initWithTitle:@"保存" style:UIBarButtonItemStyleDone target:self action:@selector(doSaveItem)];
    self.navigationItem.rightBarButtonItem = item;
    
    
    _tableV = [[UITableView alloc]initWithFrame:CGRectZero style:UITableViewStylePlain];
    _tableV.tableFooterView = [UIView new];
    _tableV.separatorStyle = UITableViewCellSeparatorStyleNone;
    _tableV.showsVerticalScrollIndicator = NO;
    _tableV.showsHorizontalScrollIndicator = NO;
    _tableV.backgroundColor = COLOR_BG;
    _tableV.dataSource = self;
    _tableV.delegate = self;
    [self.view addSubview:_tableV];
    [_tableV mas_updateConstraints:^(MASConstraintMaker *make) {
        make.edges.equalTo(self.view);
    }];
    
}
#pragma mark - action
-(void)doSaveItem{
    
    if (self.nameTF.text.length == 0) {
        [HUD showHUDError:nil title:@"请输入联系人姓名"];
        return;
    }
    if (self.phoneTF.text.length == 0) {
        [HUD showHUDError:nil title:@"请输入联系电话"];
        return;
    }
    
    if (![NSString ym_validateMobile:self.phoneTF.text]) {
        [HUD showHUDError:nil title:@"请填写正确的手机号"];
        return;
    }
    
    NSMutableDictionary *dataDic = [NSMutableDictionary dictionary];
    [dataDic setValue:self.list.ID == 0 ? @"" : NSStringFromInteger(self.list.ID) forKey:@"id"];
    [dataDic setValue:self.nameTF.text forKey:@"userName"];
    [dataDic setValue:self.phoneTF.text forKey:@"phone"];
    
    NSMutableDictionary *paramDic = [NSMutableDictionary dictionary];
    [paramDic setValue:[dataDic mj_JSONString] forKey:@"data"];
    [paramDic setValue:AppDelegateInstance.token forKey:@"token"];
    
    [[RHNetAPIManager sharedManager]appEditCompanyContactsOPT:paramDic].start(^(id data, NSString *msg, NSInteger code, NSError *error) {
        if (data) {
            [HUD showHUDError:nil title:@"保存成功"];
            [self.navigationController popViewControllerAnimated:YES];
        }
    });
}

#pragma mark - tableView delegate
-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section{
    return 2;
}
-(UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath{
    CELL_DEFINE(MineInfoTableViewCell);
    cell.arrowImgV.hidden = YES;
    cell.line.hidden = NO;
    
    [cell.textF mas_remakeConstraints:^(MASConstraintMaker *make) {
        make.right.mas_offset(-Size(15));
        make.centerY.equalTo(cell.contentView);
        make.left.equalTo(cell.titleLab.mas_right);
    }];
    cell.textF.adjustsFontSizeToFitWidth = YES;
    cell.textF.minimumFontSize = Size(5);
    cell.textF.enabled = YES;
    switch (indexPath.row) {
        case 0:
            cell.titleLab.text = @"联系人名字";
            cell.textF.placeholder = @"请填写";
            cell.textF.text = self.list.userName;
            self.nameTF = cell.textF;
            self.nameTF.delegate = self;
            break;
        case 1:
            cell.titleLab.text = @"联系人电话";
            cell.textF.placeholder = @"请填写";
            cell.textF.text = self.list.phone;
            self.phoneTF = cell.textF;
            self.phoneTF.delegate = self;
            
            break;
        default:
            break;
    }
    
    return cell;
}
-(CGFloat)tableView:(UITableView *)tableView heightForRowAtIndexPath:(NSIndexPath *)indexPath{
    return Size(120/2);
}
-(void)textFieldDidEndEditing:(UITextField *)textField{
    if (textField == self.nameTF) {
        self.list.userName = textField.text;
    }
    if (textField == self.phoneTF) {
        if ([NSString ym_validateMobile:self.phoneTF.text]) {
            self.list.phone = textField.text;
        }else{
            [HUD showHUDError:nil title:@"请填写正确的手机号"];
        }
        
    }
}
