-(void)judgeCompanyVerify{
   
    
    NSInteger code = AppDelegateInstance.userModel.loginCode;
    switch (code) {
        case 2:{//未进行企业认证
           [self presentViewController:[[BaseNavigationController alloc] initWithRootViewController:[ComapnyVerifyViewController new]] animated:YES completion:nil];
        }
            break;
       
        case 3:{//完善企业信息,跳转编辑公司界面
            self.completeInfoAlertV.hidden = _jumpInfo;
            _pageNum = 1;
            [self requestListData];
        }
        default:{
            _pageNum = 1;
            [self requestListData];
        }
            break;
    }
    
}

