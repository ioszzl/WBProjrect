#import "ResumeMineInfoView.h"

@implementation ResumeMineInfoView

- (instancetype)init
{
    self = [super init];
    if (self) {
        [self initUI];
    }
    return self;
}

-(void)initUI{
    self.backgroundColor = RGBCOLOR(255, 255, 255);
    
    _headImgV = [[UIImageView alloc]initWithImage:[UIImage imageNamed:@"个人中心头像"]];
    _headImgV.layer.cornerRadius = Size(110/4);
    _headImgV.clipsToBounds = YES;
    //_headImgV.contentMode = UIViewContentModeScaleAspectFit;
    [self addSubview:_headImgV];
    [_headImgV mas_makeConstraints:^(MASConstraintMaker *make) {
        make.centerX.equalTo(self);
        make.height.width.mas_equalTo(Size(110/2));
        make.top.mas_offset(Size(15));
    }];
    
    _editInfoBtn = [UIButton buttonWithType:UIButtonTypeCustom];
    [_editInfoBtn setImage:[UIImage imageNamed:@"编辑"] forState:UIControlStateNormal];
    [self addSubview:_editInfoBtn];
    [_editInfoBtn mas_makeConstraints:^(MASConstraintMaker *make) {
        make.right.mas_offset(-Size(150/2));
        make.top.mas_offset(Size(25/2));
    }];
    [_editInfoBtn addTarget:self action:@selector(doEditInfoBtn) forControlEvents:UIControlEventTouchUpInside];
    
    
    _nameLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51];
    [self addSubview:_nameLab];
    [_nameLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(_headImgV.mas_bottom).mas_offset(Size(15));
        make.centerX.equalTo(_headImgV);
    }];
    
    UIView *line1 = [UIView new];
    line1.backgroundColor = COLOR_RGB_line;
    [self addSubview:line1];
    [line1 mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(_nameLab.mas_bottom).mas_offset(Size(9));
        make.right.equalTo(_headImgV.mas_left).mas_offset(-Size(5));
        make.width.mas_equalTo(1);
        make.height.mas_equalTo(Size(13));
    }];
    
    
    UIView *line2 = [UIView new];
    line2.backgroundColor = COLOR_RGB_line;
    [self addSubview:line2];
    [line2 mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(_nameLab.mas_bottom).mas_offset(Size(9));
        make.left.equalTo(_headImgV.mas_right).mas_offset(Size(5));
        make.width.mas_equalTo(1);
        make.height.mas_equalTo(Size(13));
    }];
    
    _genderLab = [UILabel ym_labelWithFrame:CGRectZero font:[UIFont systemFontOfSize:Size(13)] textColor:COLOR_RGB_153];
    [self addSubview:_genderLab];
    [_genderLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.right.equalTo(line1.mas_left).mas_offset(-Size(14));
        make.centerY.equalTo(line1);
    }];
    
    _ageLab = [UILabel ym_labelWithFrame:CGRectZero font:[UIFont systemFontOfSize:Size(13)] textColor:COLOR_RGB_153];
    [self addSubview:_ageLab];
    [_ageLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(_nameLab.mas_bottom).mas_offset(Size(9));
        make.centerX.equalTo(_nameLab);
    }];
    
    _educationLab = [UILabel ym_labelWithFrame:CGRectZero font:[UIFont systemFontOfSize:Size(13)] textColor:COLOR_RGB_153];
    [self addSubview:_educationLab];
    [_educationLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(line2.mas_right).mas_offset(Size(14));
        make.centerY.equalTo(_ageLab);
    }];
    
    _phoneBtn = [UIButton ym_ButtonWithFrame:CGRectZero title:@"12345648999" backgroundColor:nil titleColor:COLOR_RGB_102 titleSize:Size(11)];
    [self addSubview:_phoneBtn];
    [_phoneBtn mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(22));
        make.bottom.mas_offset(-Size(15));
    }];
    [_phoneBtn setImage:[UIImage imageNamed:@"电话"] forState:UIControlStateNormal];
    [_phoneBtn ym_layoutButtonWithEdgeInsetsStyle:MKButtonEdgeInsetsStyleLeft imageTitleSpace:Size(5)];

    _emailBtn = [UIButton ym_ButtonWithFrame:CGRectZero title:@"1234564899@qq.com" backgroundColor:nil titleColor:COLOR_RGB_102 titleSize:Size(11)];
    [self addSubview:_emailBtn];
    [_emailBtn mas_makeConstraints:^(MASConstraintMaker *make) {
        make.right.mas_offset(-Size(17));
        make.bottom.mas_offset(-Size(15));
    }];
    [_emailBtn setImage:[UIImage imageNamed:@"邮箱"] forState:UIControlStateNormal];
    [_emailBtn ym_layoutButtonWithEdgeInsetsStyle:MKButtonEdgeInsetsStyleLeft imageTitleSpace:Size(5)];

}

-(void)doEditInfoBtn{
    BLOCK_EXEC(self.editInfoBlock);
}
