#import "PositionPayTableViewCell.h"

@implementation PositionPayTableViewCell
-(instancetype)initWithStyle:(UITableViewCellStyle)style reuseIdentifier:(NSString *)reuseIdentifier{
    self = [super initWithStyle:style reuseIdentifier:reuseIdentifier];
    if (self) {
        self.selectionStyle = UITableViewCellSelectionStyleNone;
        [self initUI];
    }
    return self;
}
-(void)initUI{
    self.backgroundColor = COLOR_BG;
    
    UIView *bgV = [[UIView alloc]initWithFrame:CGRectZero];
    bgV.backgroundColor = RGBCOLOR(255, 255, 255);
    [self.contentView addSubview:bgV];
    [bgV mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(15));
        make.top.mas_offset(0);
        make.bottom.mas_offset(0);
        make.right.mas_offset(-Size(15));
    }];
    //延时下一帧 获取View的frame
    dispatch_after(dispatch_time(DISPATCH_TIME_NOW, (int64_t)(0 * NSEC_PER_SEC)), dispatch_get_main_queue(), ^{
        UIBezierPath *maskPath = [UIBezierPath bezierPathWithRoundedRect:bgV.bounds byRoundingCorners:(UIRectCornerBottomLeft | UIRectCornerBottomRight) cornerRadii:CGSizeMake(Size(5),Size(5))];//圆角大小
        CAShapeLayer *maskLayer = [[CAShapeLayer alloc] init];
        maskLayer.frame = bgV.bounds;
        maskLayer.path = maskPath.CGPath;
        bgV.layer.mask = maskLayer;
    });
    
    UILabel *totalLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_153];
    totalLab.text = @"综合工资:";
    [bgV addSubview:totalLab];
    [totalLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(10));
        make.top.mas_offset(Size(17));
        make.width.mas_equalTo(Size(140/2));
    }];
    _totalMoneyLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51 textAlignment:NSTextAlignmentLeft];
    [bgV addSubview:_totalMoneyLab];
    [_totalMoneyLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(totalLab.mas_right).mas_offset(Size(5));
        make.top.mas_offset(Size(17));
        make.right.mas_offset(-Size(15));
    }];
    
    
    UILabel *baseLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_153];
    baseLab.text = @"基本工资:";
    [bgV addSubview:baseLab];
    [baseLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(10));
        make.top.equalTo(_totalMoneyLab.mas_bottom).mas_offset(Size(15));
        make.width.mas_equalTo(Size(140/2));
    }];
    _baseMoneyLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51 textAlignment:NSTextAlignmentLeft];
    [bgV addSubview:_baseMoneyLab];
    [_baseMoneyLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(baseLab.mas_right).mas_offset(Size(5));
        make.top.equalTo(baseLab);
        make.right.mas_offset(-Size(15));
    }];
    
    
    UILabel *payLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_153];
    payLab.text = @"发薪安排:";
    [bgV addSubview:payLab];
    [payLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(10));
        make.top.equalTo(_baseMoneyLab.mas_bottom).mas_offset(Size(15));
        make.width.mas_equalTo(Size(140/2));
    }];
    _payDateLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51 textAlignment:NSTextAlignmentLeft];
    [bgV addSubview:_payDateLab];
    [_payDateLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(payLab.mas_right).mas_offset(Size(5));
        make.top.equalTo(payLab);
        make.right.mas_offset(-Size(15));
        make.bottom.mas_offset(-Size(30));
    }];
    
    
//    _totalMoneyLab.text = @"5000-10000元/月";
//    _baseMoneyLab.text = @"试用期2300元。不是当地时间，不干拉倒";
//    _payDateLab.text = @"每个月月底";
    
}
- (void)awakeFromNib {
    [super awakeFromNib];
    // Initialization code
}

- (void)setSelected:(BOOL)selected animated:(BOOL)animated {
    [super setSelected:selected animated:animated];

    // Configure the view for the selected state
}

@end
