#import "SkillCertificateHeaderView.h"

@implementation SkillCertificateHeaderView
- (instancetype)init
{
    self = [super init];
    if (self) {
        [self initUI];
    }
    return self;
}
-(void)initUI{
    _titleLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51];
    
    [self addSubview:_titleLab];
    [_titleLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.top.mas_offset(Size(15));
        
    }];
    
    UIView *skillV = [UIView new];
    skillV.backgroundColor = RGBCOLOR(255, 255, 255);
    skillV.layer.borderColor = COLOR_RGB_line.CGColor;
    skillV.layer.borderWidth = 0.5;
    [self addSubview:skillV];
    [skillV mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.right.mas_offset(0);
        make.height.mas_equalTo(Size(60));
        make.top.equalTo(_titleLab.mas_bottom).mas_offset(Size(10));
    }];
    
    _textF = [UITextField new];
    _textF.delegate = self;
    _textF.font = FONT_SIZE_15;
    _textF.textColor = COLOR_RGB_51;
    _textF.placeholder = @"请填写";
    [skillV addSubview:_textF];
    [_textF mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(15));
        make.centerY.equalTo(skillV);
        make.right.mas_offset(-Size(15));
    }];
    
    
    _addBtn = [UIButton ym_ButtonWithFrame:CGRectZero title:@"" backgroundColor:RGBCOLOR(255, 255, 255) titleColor:COLOR_MAIN_PERSON titleSize:Size(15) cornerRadius:Size(4) borderWidth:0.5 borderColor:COLOR_RGB_line];
    [self addSubview:_addBtn];
    [_addBtn mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(skillV.mas_bottom).mas_offset(Size(20));
        make.left.mas_offset(Size(15));
        make.right.mas_offset(-Size(15));
        make.height.mas_equalTo(Size(98/2));
    }];
    [_addBtn addTarget:self action:@selector(doAddSkillBtn:) forControlEvents:UIControlEventTouchUpInside];
}

-(void)doAddSkillBtn:(UIButton *)btn{
    BLOCK_EXEC(self.addBtnBlock,self.textF.text);
    
}

