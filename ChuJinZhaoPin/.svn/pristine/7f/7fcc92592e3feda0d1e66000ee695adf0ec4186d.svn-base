#import "PublishPositionVC.h"
#import "PublishPositionTableViewCell.h"
#import "PositionDetailViewController.h"
#import "CJAlertView.h"
#import "PositionListModel.h"
@interface PublishPositionVC ()<UITableViewDelegate,UITableViewDataSource>{
    NSInteger _pageNum;
}
@property (nonatomic, strong) UITableView *tableV;
@property (nonatomic, strong) NSArray<PositionList *> *dataSource;
@property (nonatomic, strong) UIButton *alreadyBtn;
@property (nonatomic, strong) UIButton *notBtn;
@end

@implementation PublishPositionVC

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    
    [self initUI];
}
-(void)viewDidAppear:(BOOL)animated{
    [super viewDidAppear:animated];
    _pageNum = 1;
    [self requestListData];
}
-(void)initUI{
    UIBarButtonItem *item = [[UIBarButtonItem alloc]initWithImage:[UIImage imageNamed:@"add"] style:UIBarButtonItemStyleDone target:self action:@selector(doAddItem)];
    self.navigationItem.rightBarButtonItem = item;
    
    UIView *navView = [[UIView alloc]initWithFrame:CGRectMake(0, kStatusHeight, Size(346/2), 44)];
    self.navigationItem.titleView = navView;
    if (@available(iOS 11.0, *)) {
        [navView mas_makeConstraints:^(MASConstraintMaker *make) {
            make.width.mas_equalTo(Size(346/2));
            make.height.mas_equalTo(44);
        }];
    }
    UIView *bgV = [UIView new];
    bgV.layer.cornerRadius = Size(5);
    bgV.layer.borderColor = COLOR_RGB_line.CGColor;
    bgV.layer.borderWidth = 0.5;
    bgV.clipsToBounds = YES;
    [navView addSubview:bgV];
    [bgV mas_makeConstraints:^(MASConstraintMaker *make) {
        make.center.equalTo(navView);
        make.width.mas_equalTo(Size(346/2));
        make.height.mas_equalTo(Size(56/2));
    }];
    
    _alreadyBtn = [UIButton ym_ButtonWithFrame:CGRectZero title:@"已发布" backgroundColor:nil titleColor:RGBCOLOR(255, 255, 255) titleSize:Size(14)];
    [bgV addSubview:_alreadyBtn];
    [_alreadyBtn mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.top.bottom.mas_offset(0);
        make.right.mas_equalTo(bgV.mas_centerX);
    }];
    [_alreadyBtn setBackgroundImage:[UIImage ym_imageWithColor:RGBCOLOR(255, 255, 255) size:CGSizeMake(Size(346/4), Size(56/2))] forState:UIControlStateSelected];
    [_alreadyBtn setTitleColor:COLOR_RGB_51 forState:UIControlStateSelected];
    [_alreadyBtn addTarget:self action:@selector(doChangeBtn:) forControlEvents:UIControlEventTouchUpInside];
    _alreadyBtn.selected = YES;
    
    _notBtn = [UIButton ym_ButtonWithFrame:CGRectZero title:@"待发布" backgroundColor:nil titleColor:RGBCOLOR(255, 255, 255) titleSize:Size(14)];
    [bgV addSubview:_notBtn];
    [_notBtn mas_makeConstraints:^(MASConstraintMaker *make) {
        make.right.top.bottom.mas_offset(0);
        make.left.mas_equalTo(bgV.mas_centerX);
    }];
    [_notBtn setBackgroundImage:[UIImage ym_imageWithColor:RGBCOLOR(255, 255, 255) size:CGSizeMake(Size(346/4), Size(56/2))] forState:UIControlStateSelected];
    [_notBtn setTitleColor:COLOR_RGB_51 forState:UIControlStateSelected];
    [_notBtn addTarget:self action:@selector(doChangeBtn:) forControlEvents:UIControlEventTouchUpInside];
    
    _tableV = [[UITableView alloc]initWithFrame:CGRectZero style:UITableViewStyleGrouped];
    _tableV.separatorStyle = UITableViewCellSeparatorStyleNone;
    _tableV.showsVerticalScrollIndicator = NO;
    _tableV.showsHorizontalScrollIndicator = NO;
    _tableV.backgroundColor = COLOR_BG;
    _tableV.dataSource = self;
    _tableV.delegate = self;
    [self.view addSubview:_tableV];
    [_tableV mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.left.right.bottom.mas_offset(0);
    }];
    _tableV.estimatedRowHeight = 0;
    _tableV.estimatedSectionHeaderHeight = 0;
    _tableV.estimatedSectionFooterHeight = 0;
    

    _tableV.rowHeight = Size(362/2+Size(5));
    _tableV.mj_header = [YMRefreshHeader ym_headerWithRefreshingsBlock:^{
        _pageNum = 1;
        [self requestListData];
        
    } animated:NO];
    _tableV.mj_footer = [YMRefreshFooter ym_footerWithRefreshingsBlock:^{
        _pageNum++;
        [self requestListData];
    } animated:NO];
}
#pragma mark - request
-(void)requestListData{
    NSMutableDictionary *pageDic = [NSMutableDictionary dictionary];
    [pageDic setValue:NSStringFromInteger(_pageNum) forKey:@"currPage"];
    [pageDic setValue:@"10" forKey:@"pageSize"];
    
    NSMutableDictionary *dataDic = [NSMutableDictionary dictionary];
    [dataDic setValue:self.alreadyBtn.selected ? @"0" : @"1" forKey:@"status"];
    
    NSMutableDictionary *paramDic = [NSMutableDictionary dictionary];
    [paramDic setValue:[dataDic mj_JSONString] forKey:@"data"];
    [paramDic setValue:AppDelegateInstance.token forKey:@"token"];
    [paramDic setValue:[pageDic mj_JSONString] forKey:@"page"];
    
    [[RHNetAPIManager sharedManager]appPostsListOPT:paramDic].start(^(id data, NSString *msg, NSInteger code, NSError *error) {
        if (data) {
            PositionListModel *model = [PositionListModel mj_objectWithKeyValues:data];
            if (_pageNum == 1) {
                self.dataSource = model.data.pageInfo.list;
                [self.tableV.mj_header endRefreshing];
                [self.tableV.mj_footer resetNoMoreData];
            }else{
                NSMutableArray *temp = [NSMutableArray arrayWithArray:self.dataSource];
                [temp addObjectsFromArray:model.data.pageInfo.list];
                self.dataSource  = [temp copy];
            }
            if (model.data.pageInfo.isLastPage) {
                [self.tableV.mj_footer endRefreshingWithNoMoreData];
            }else{
                [self.tableV.mj_footer endRefreshing];
            }
            
            [self.tableV reloadData];
            
        }else{
            
            [self.tableV.mj_header endRefreshing];
            [self.tableV.mj_footer endRefreshing];
        }
        
    });
}
#pragma mark - action
-(void)doChangeBtn:(UIButton *)btn{
    btn.selected = YES;
    if ([btn isEqual:self.alreadyBtn]) {
        self.notBtn.selected = NO;
        
    }else{
        self.alreadyBtn.selected = NO;
    }
    
    _pageNum = 1;
    [self requestListData];
   
}
-(void)doAddItem{
    PositionDetailViewController *vc = [PositionDetailViewController new];
    [self.navigationController pushViewController:vc animated:YES];
}

#pragma mark - tableview delegate
-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section{
//    if (self.notBtn.selected) {
//        return 3;
//    }
    return self.dataSource.count;
}
-(UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath{
    
    CELL_DEFINE(PublishPositionTableViewCell);
    
    PositionList *list = self.dataSource[indexPath.row];
    cell.list = list;
    
    cell.oneBtnBlock = ^(UIButton * _Nonnull btn) {
        if ([btn.titleLabel.text isEqualToString:@"发布"]) {
            CJAlertView *alert = [CJAlertView CJAlertViewWithTitle:@"提示" message:@"确定发布该职位吗？" btnTitleArr:@[@"取消",@"确定"] BtnBlock:^(NSInteger index) {
                if (index == 1) {
                    NSMutableDictionary *dataDic = [NSMutableDictionary dictionary];
                    [dataDic setValue:NSStringFromInteger(list.ID) forKey:@"postId"];
                    [dataDic setValue:@"0" forKey:@"status"];
                    
                    NSMutableDictionary *paramDic = [NSMutableDictionary dictionary];
                    [paramDic setValue:[dataDic mj_JSONString] forKey:@"data"];
                    [paramDic setValue:AppDelegateInstance.token forKey:@"token"];
                    
                    [[RHNetAPIManager sharedManager]appUpdatePostStatusToPauseOPT:paramDic].start(^(id data, NSString *msg, NSInteger code, NSError *error) {
                        if (data) {
                            if (code == 5000) {
                
                                CJAlertView *alert1 = [CJAlertView CJAlertViewWithTitle:@"缴纳押金" messageAlignment:NSTextAlignmentLeft message:data[@"data"] btnTitleArr:@[@"取消",@"去支付"] BtnBlock:^(NSInteger index) {
                                    if (index == 1) {
                                        // TODO: 去支付未完成
                                    }
                                }];
                                [alert1 show];
                            }else{
                                [HUD showHUDError:nil title:@"已发布"];
                            }
                            
                        }
                    });
                    
                    
                }
            }];
            [alert show];
            
        }
        
        if ([btn.titleLabel.text isEqualToString:@"暂停"]) {
            CJAlertView *alert = [CJAlertView CJAlertViewWithTitle:@"提示" message:@"确定暂停发布该职位吗？" btnTitleArr:@[@"取消",@"确定"] BtnBlock:^(NSInteger index) {
                if (index == 1) {
                    NSMutableDictionary *dataDic = [NSMutableDictionary dictionary];
                    [dataDic setValue:NSStringFromInteger(list.ID) forKey:@"postId"];
                    [dataDic setValue:@"2" forKey:@"status"];
                    
                    NSMutableDictionary *paramDic = [NSMutableDictionary dictionary];
                    [paramDic setValue:[dataDic mj_JSONString] forKey:@"data"];
                    [paramDic setValue:AppDelegateInstance.token forKey:@"token"];
                    
                    [[RHNetAPIManager sharedManager]appUpdatePostStatusToPauseOPT:paramDic].start(^(id data, NSString *msg, NSInteger code, NSError *error) {
                        if (data) {
                            [HUD showHUDError:nil title:@"已暂停"];
                        }
                    });
                }
            }];
            [alert show];
        }
        
    };


    return cell;
    
}


-(UIView *)tableView:(UITableView *)tableView viewForHeaderInSection:(NSInteger)section{
    return [UIView new];
}
-(UIView *)tableView:(UITableView *)tableView viewForFooterInSection:(NSInteger)section{
    return [UIView new];
}
-(CGFloat)tableView:(UITableView *)tableView heightForFooterInSection:(NSInteger)section{
    return CGFLOAT_MIN;
}
-(CGFloat)tableView:(UITableView *)tableView heightForHeaderInSection:(NSInteger)section{
    return CGFLOAT_MIN;
}
-(void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath{
   
    PositionDetailViewController *vc = [PositionDetailViewController new];
    vc.postId = NSStringFromInteger(self.dataSource[indexPath.row].ID);
    [self.navigationController pushViewController:vc animated:YES];
}


