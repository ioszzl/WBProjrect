#import "PositionBenefitTableViewCell.h"

@implementation PositionBenefitTableViewCell
-(instancetype)initWithStyle:(UITableViewCellStyle)style reuseIdentifier:(NSString *)reuseIdentifier{
    self = [super initWithStyle:style reuseIdentifier:reuseIdentifier];
    if (self) {
        self.selectionStyle = UITableViewCellSelectionStyleNone;
        [self initUI];
    }
    return self;
}
-(void)initUI{
    self.backgroundColor = COLOR_BG;
    
    UIView *bgV = [[UIView alloc]initWithFrame:CGRectZero];
    bgV.backgroundColor = RGBCOLOR(255, 255, 255);
    [self.contentView addSubview:bgV];
    [bgV mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(15));
        make.top.mas_offset(0);
        make.bottom.mas_offset(0);
        make.right.mas_offset(-Size(15));
    }];
    //延时下一帧 获取View的frame
    dispatch_after(dispatch_time(DISPATCH_TIME_NOW, (int64_t)(0 * NSEC_PER_SEC)), dispatch_get_main_queue(), ^{
        UIBezierPath *maskPath = [UIBezierPath bezierPathWithRoundedRect:bgV.bounds byRoundingCorners:(UIRectCornerBottomLeft | UIRectCornerBottomRight) cornerRadii:CGSizeMake(Size(5),Size(5))];//圆角大小
        CAShapeLayer *maskLayer = [[CAShapeLayer alloc] init];
        maskLayer.frame = bgV.bounds;
        maskLayer.path = maskPath.CGPath;
        bgV.layer.mask = maskLayer;
    });
    
    UILabel *fLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_153];
    fLab.text = @"餐补情况:";
    [bgV addSubview:fLab];
    [fLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(10));
        make.top.mas_offset(Size(17));
        make.width.mas_equalTo(Size(140/2));
    }];
    _foodLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51 textAlignment:NSTextAlignmentLeft];
    [bgV addSubview:_foodLab];
    [_foodLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(fLab.mas_right).mas_offset(Size(5));
        make.top.mas_offset(Size(17));
        make.right.mas_offset(-Size(15));
    }];
    
    
    UILabel *sLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_153];
    sLab.text = @"住宿情况:";
    [bgV addSubview:sLab];
    [sLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(10));
        make.top.equalTo(_foodLab.mas_bottom).mas_offset(Size(15));
        make.width.mas_equalTo(Size(140/2));
    }];
    _stayLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51 textAlignment:NSTextAlignmentLeft];
    [bgV addSubview:_stayLab];
    [_stayLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(sLab.mas_right).mas_offset(Size(5));
        make.top.equalTo(sLab);
        make.right.mas_offset(-Size(15));
    }];
    
    
    UILabel *payLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_153];
    payLab.text = @"社保福利:";
    [bgV addSubview:payLab];
    [payLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(10));
        make.top.equalTo(_stayLab.mas_bottom).mas_offset(Size(15));
        make.width.mas_equalTo(Size(140/2));
    }];
    _socialLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51 textAlignment:NSTextAlignmentLeft];
    [bgV addSubview:_socialLab];
    [_socialLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(payLab.mas_right).mas_offset(Size(5));
        make.top.equalTo(payLab);
        make.height.mas_greaterThanOrEqualTo(Size(15));
        make.right.mas_offset(-Size(15));
    }];
    
    
    UILabel *oLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_153];
    oLab.text = @"其他福利:";
    [bgV addSubview:oLab];
    [oLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(10));
        make.top.equalTo(_socialLab.mas_bottom).mas_offset(Size(15));
        make.width.mas_equalTo(Size(140/2));
    }];
    _otherLab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_15 textColor:COLOR_RGB_51 textAlignment:NSTextAlignmentLeft];
    [bgV addSubview:_otherLab];
    [_otherLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(oLab.mas_right).mas_offset(Size(5));
        make.top.equalTo(oLab);
        make.right.mas_offset(-Size(15));
        make.bottom.mas_offset(-Size(30));
    }];
    
    
//    _foodLab.text = @"有";
//    _stayLab.text = @"无";
//    _socialLab.text = @"入职缴纳五险一金";
//    _otherLab.text = @"下午茶、休假、年度旅途";
    
}
- (void)awakeFromNib {
    [super awakeFromNib];
    // Initialization code
}

- (void)setSelected:(BOOL)selected animated:(BOOL)animated {
    [super setSelected:selected animated:animated];

    // Configure the view for the selected state
}

@end
