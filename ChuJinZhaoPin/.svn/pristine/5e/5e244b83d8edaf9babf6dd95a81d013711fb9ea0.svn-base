#import "InterviewReasonAlertView.h"
@interface InterviewReasonAlertView()
@property (nonatomic, strong) UIView *alertBgView;
@end
@implementation InterviewReasonAlertView
- (instancetype)initWithFrame:(CGRect)frame
{
    self = [super initWithFrame:frame];
    if (self) {
        self.backgroundColor = RGBACOLOR(0, 0, 0, .5);
        [self initUI];
    }
    return self;
}
+(instancetype)interViewReasonAlertWithTitle:(NSString *)title name:(NSString *)name phone:(NSString *)phone position:(NSString *)position btnTitleArr:(NSArray *)btnTitleArr btnBlock:(void(^)(NSInteger index, NSString *reasonText))block{
    InterviewReasonAlertView *alert = [[InterviewReasonAlertView alloc]initWithFrame:CGRectMake(0, 0, kScreenWidth, kScreenHeight)];
    
    alert.titleLabel.text = title;
    alert.nameLab.text = [NSString stringWithFormat:@"求职者姓名：%@",name];
    alert.phoneLab.text = [NSString stringWithFormat:@"电话：%@",phone];
    alert.positionLab.text = [NSString stringWithFormat:@"投递岗位：%@",position];
    
    alert.btnTitleArr = btnTitleArr;
    alert.buttonClick = block;
    
    return alert;
}
-(void)initUI{
    UIScrollView *scroll = [UIScrollView new];
    scroll.contentSize = self.size;
    [self addSubview:scroll];
    [scroll mas_makeConstraints:^(MASConstraintMaker *make) {
        make.edges.equalTo(self);
    }];
    
    CGFloat width = Size(660/2);
    
    self.alertBgView = [[UIView alloc]initWithFrame:CGRectZero];
    self.alertBgView.backgroundColor = [UIColor whiteColor];
    self.alertBgView.layer.masksToBounds = YES;
    self.alertBgView.layer.cornerRadius = Size(5);
    [scroll addSubview:self.alertBgView];
    [self.alertBgView mas_makeConstraints:^(MASConstraintMaker *make) {
        make.center.equalTo(scroll);
        make.width.mas_equalTo(width);
        make.height.mas_greaterThanOrEqualTo(Size(360/2));
    }];
    
    self.titleLabel = [[UILabel alloc]initWithFrame:CGRectZero];
    self.titleLabel.textAlignment = NSTextAlignmentCenter;
    self.titleLabel.textColor = HEXRGBCOLOR(0x666666);
    self.titleLabel.font = [UIFont systemFontOfSize:Size(18)];
    [self.alertBgView addSubview:self.titleLabel];
    [self.titleLabel mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.mas_offset(0);
        make.centerX.equalTo(self.alertBgView);
        make.height.mas_equalTo(Size(88/2));
    }];
    
    UIView *line = [[UIView alloc]initWithFrame:CGRectZero];
    line.backgroundColor = COLOR_RGB_line;
    [self.alertBgView addSubview:line];
    [line mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.right.mas_offset(0);
        make.top.mas_offset(88/2);
        make.height.mas_equalTo(0.6);
    }];
    
    _nameLab = [UILabel ym_labelWithFrame:CGRectZero font:[UIFont systemFontOfSize:Size(14)] textColor:COLOR_RGB_51];
    _nameLab.text = @"求职者姓名:";
    [self.alertBgView addSubview:_nameLab];
    [_nameLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(15));
        make.top.equalTo(line.mas_bottom).mas_offset(Size(17));
        make.width.mas_lessThanOrEqualTo(Size(328/2));
    }];
    
    _phoneLab = [UILabel ym_labelWithFrame:CGRectZero font:[UIFont systemFontOfSize:Size(14)] textColor:COLOR_RGB_51];
    _phoneLab.text = @"电话:";
    [self.alertBgView addSubview:_phoneLab];
    [_phoneLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.right.mas_offset(-Size(15));
        make.top.equalTo(line.mas_bottom).mas_offset(Size(17));
    }];
    
    _positionLab = [UILabel ym_labelWithFrame:CGRectZero font:[UIFont systemFontOfSize:Size(14)] textColor:COLOR_RGB_51];
    _positionLab.text = @"投递岗位:";
    [self.alertBgView addSubview:_positionLab];
    [_positionLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(15));
        make.top.equalTo(_nameLab.mas_bottom).mas_offset(Size(12));
    }];
    
    UILabel *lab = [UILabel ym_labelWithFrame:CGRectZero font:FONT_SIZE_12 textColor:HEXRGBCOLOR(0x666666)];
    lab.text = @"拒绝信:";
    [self.alertBgView addSubview:lab];
    [lab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(17));
        make.top.equalTo(_positionLab.mas_bottom).mas_offset(Size(18));
    }];
    
    _reasonTextV = [YMTextView new];
    _reasonTextV.textColor = HEXRGBCOLOR(0x999999);
    _reasonTextV.font = FONT_SIZE_12;
    _reasonTextV.layer.cornerRadius = Size(5);
    _reasonTextV.backgroundColor = COLOR_BG;
    _reasonTextV.text = @"抱歉，您的简历内容与岗位不匹配";
    [self.alertBgView addSubview:_reasonTextV];
    [_reasonTextV mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_offset(Size(15));
        make.top.equalTo(lab.mas_bottom).mas_offset(Size(10));
        make.right.mas_offset(-Size(15));
        make.bottom.mas_offset(-Size(108/2 + 15));
        make.height.mas_equalTo(Size(158/2));
    }];
    
    
}
-(void)setBtnTitleArr:(NSArray *)btnTitleArr{
    _btnTitleArr = btnTitleArr;
    
    UIView *line1 = [UIView new];
    line1.backgroundColor = COLOR_RGB_line;
    [self.alertBgView addSubview:line1];
    [line1 mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.right.mas_offset(0);
        make.bottom.mas_offset(-Size(108/2));
        make.height.mas_equalTo(0.5);
    }];
    
    UIView *line2 = [UIView new];
    line2.backgroundColor = COLOR_RGB_line;
    [self.alertBgView addSubview:line2];
    [line2 mas_makeConstraints:^(MASConstraintMaker *make) {
        make.centerX.equalTo(self.alertBgView);
        make.top.equalTo(line1.mas_bottom);
        make.bottom.mas_offset(0);
        make.width.mas_equalTo(0.5);
    }];
    
    
    for (int i=0; i<_btnTitleArr.count; i++) {
        
        UIButton *btn = [UIButton ym_ButtonWithFrame:CGRectZero title:btnTitleArr[i] backgroundColor:HEXRGBCOLOR(0xffffff) titleColor:HEXRGBCOLOR(0x333333) titleSize:Size(15)];
        btn.tag = i;
        btn.layer.cornerRadius = Size(5);
        [btn addTarget:self action:@selector(doBtn:) forControlEvents:UIControlEventTouchUpInside];
        [self.alertBgView addSubview:btn];
        if (i == 0) {
            [btn mas_makeConstraints:^(MASConstraintMaker *make) {
                make.left.bottom.mas_offset(0);
                make.right.equalTo(line2.mas_left);
                make.top.equalTo(line1.mas_bottom);
            }];
            
        }else{
            [btn setTitleColor:COLOR_MAIN forState:UIControlStateNormal];
            [btn mas_makeConstraints:^(MASConstraintMaker *make) {
                make.right.bottom.mas_offset(0);
                make.left.equalTo(line2.mas_right);
                make.top.equalTo(line1.mas_bottom);
            }];
        }
        
    }
    
}

-(void)show{
//    [self.superview addSubview:self];
    [AppDelegateInstance.window addSubview:self];
}

-(void)doBtn:(UIButton *)btn{
    [self removeFromSuperview];
    BLOCK_EXEC(self.buttonClick,btn.tag, _reasonTextV.text);
}
