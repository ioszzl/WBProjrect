@interface CompanyCenterVC ()<UITableViewDataSource,UITableViewDelegate>
@property (nonatomic, strong) UITableView *tableV;
@property (nonatomic, strong) UIButton *messageBtn;

@property (nonatomic, strong) UILabel *manageLab;
@property (nonatomic, strong) UILabel *peopleLab;
@property (nonatomic, strong) UILabel *tradeLab;

@property (nonatomic, strong) UIImageView *headImgV;
@property (nonatomic, strong) UILabel *nameLab;

@property (nonatomic, strong) CompanyDetailInfoModel *model;
